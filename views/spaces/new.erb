<div class="centered-container">
  <h2>List a Space</h2>
</div>
<%= flash[:notice] %>

<div class="user-info-box">
  <form action="/spaces/new" method='post'>
    <div class="user-input">
      <label for="property_name">Name</label>
    </div>
    <div class="user-input">
      <input name="property_name" id="property_name" type="text" required/>
    </div>
    <div class="user-input">
      <label for="description">Description</label>
    </div>
    <div class="user-input">
      <textarea name="description" id="description" rows="10" columns="10" style="width: 268px; height: 167px;" required></textarea>
    </div>
    <div class="user-input">
      <label for="price">Price</label>
    </div>
    <div class="user-input">
      <input type='number' min='1' name="price" id="price" required/>
    </div>
    <div class="user-input">
      <label for="availability_start">Start date:</label>
    </div>
    <div class="user-input">
      <input type="date" id="availability_start" name="availability_start"required/>
    </div>
    <div class="user-input">
      <label for="availability_end">End date:</label>
    </div>
    <div class="user-input">
      <input type="date" id="availability_end" name="availability_end" required/>
    </div>
      <input type="submit" value="List my Space">
  </form>
</div>
