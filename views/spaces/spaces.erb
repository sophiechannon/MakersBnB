<div class="centered-container">
  <h2>Book a space</h2>
</div>

<div class="centered-container">
  <form action="/spaces/new">
    <input type="submit" value="List a Space" id="List a Space" />
  </form>
</div>

<div class="centered-container">
  <form action="/spaces/filter" method="post">
    <div class="user-input">
      <label for="available_from">Available from: </label>
      <input type="date" id="available_from" name="available_from">
      <label for="available_to">Available to: </label>
      <input type="date" id="available_to" name="available_to">
    <input type="submit" value="List Spaces">
  </form>
  <form action="/spaces/reset" method="post">
    <input type="submit" value = "Reset">
  </form>
</div>

<div class="property-container">
    <% @properties.each do |property| %>
      <div class="listing">
        <a href="/spaces/<%= property.id %>" id="listing">
          <div class="listing-content">
            <%= property.name %><br>
            <%= property.description %><br>
            Â£<%= property.price %>
            <%= User.find(id: property.user_id).email %>
            availability from:<%= property.availability_start%>
            until:<%= property.availability_end%>
          </div>
        </a>
      </div>
    </a>
    <% end %>
</div>